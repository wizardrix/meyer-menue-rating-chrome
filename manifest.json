{
    "name": "Meyer-Menü Ratings",
    "description": "Bewertungen der Mahlzeiten von Meyer-Menü",
    "version": "0.0.0",
    "manifest_version": 3,
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.meyer-menue.de/*"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "https://*.meyer-menue.de/*"
            ],
            "resources": [
                "fonts/*"
            ]
        }
    ]
}